<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16.0dip"
    android:layout_marginStart="16.0dip"
    android:layout_marginEnd="16.0dip"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="0.0dip"
        android:layout_marginStart="0.0dip"
        android:layout_marginEnd="0.0dip">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="fill_parent"
            android:layout_height="350.0dip"
            android:layout_margin="0.0dip"
            app:cardBackgroundColor="#00000000"
            app:cardCornerRadius="28.0dip"
            app:cardElevation="0.0dip">
            <ImageView
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/uwu_banner_image"
                android:scaleType="centerCrop" />
            <View
                android:background="@android:color/black"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:alpha="0.2" />
            <com.neko.particlesdrawable.ParticlesView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:minDotRadius="1.0dip"
                app:maxDotRadius="4.0dip"
                app:lineThickness="1.0dip"
                app:lineDistance="86.0dip"
                app:numDots="60"
                app:dotColor="?colorPrimary"
                app:lineColor="?colorPrimary"
                app:frameDelayMillis="10"
                app:stepMultiplier="1.0" />
            <LinearLayout
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35.0dip">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:clipToPadding="false"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16.0dip"
                        android:layout_marginBottom="16.0dip"
                        android:layout_marginStart="16.0dip"
                        android:layout_marginEnd="5.0dip">
                        <com.neko.circleimageview.CircleImageView
                            android:layout_width="80.0dip"
                            android:layout_height="80.0dip"
                            android:src="@drawable/uwu_banner_profile"
                            app:civ_border_color="@android:color/white"
                            app:civ_border_overlay="true"
                            app:civ_border_width="3.0dip"
                            app:civ_circle_background_color="?colorBg" />
                    </LinearLayout>
                    <RelativeLayout
                        android:paddingTop="16.0dip"
                        android:paddingBottom="16.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:layout_marginStart="5.0dip"
                        android:layout_marginEnd="5.0dip">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="25.0sp"
                                android:textColor="@android:color/white"
                                android:ellipsize="marquee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hi, user"
                                android:singleLine="false" />
                            <TextView
                                android:textSize="17.0sp"
                                android:textColor="@android:color/white"
                                android:ellipsize="marquee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Let's sing with me!"
                                android:singleLine="true"
                                android:marqueeRepeatLimit="marquee_forever" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</LinearLayout>