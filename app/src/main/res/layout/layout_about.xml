<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_appbar" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <com.google.android.material.card.MaterialCardView
                android:clipToPadding="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:layout_marginTop="16.0dip"
                android:layout_marginRight="16.0dip"
                android:layout_marginBottom="8.0dip"
                app:cardBackgroundColor="?colorCard"
                app:cardCornerRadius="28.0dip"
                app:cardElevation="0.0dip">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="fill_parent"
                        android:layout_height="300.0dip"
                        android:layout_marginTop="12.0dip"
                        android:layout_marginBottom="8.0dip"
                        android:layout_marginStart="12.0dip"
                        android:layout_marginEnd="12.0dip"
                        app:cardBackgroundColor="#00000000"
                        app:cardCornerRadius="19.0dip"
                        app:cardElevation="0.0dip"
                        app:rippleColor="#00000000">
                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:src="@drawable/uwu_banner_image_about"
                            android:scaleType="centerCrop"
                            android:elevation="0.0dip" />
                        <View
                            android:background="@android:color/black"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:alpha="0.2" />
                        <ImageView
                            android:gravity="center"
                            android:layout_gravity="bottom|center"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginTop="-40.0dip"
                            android:src="@drawable/uwu_fluid_bg"
                            android:scaleType="centerCrop" />
                        <TextView
                            android:textSize="40.0sp"
                            android:textStyle="normal"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-20.0dip"
                            android:text=" Vocaloid "
                            android:maxLines="2"
                            android:singleLine="false"
                            android:textAllCaps="true"
                            android:fontFamily="@font/uwu_font_typography"
                            android:textAlignment="center"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/title_card"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="8.0dip"
                        android:layout_marginBottom="12.0dip"
                        android:layout_marginStart="12.0dip"
                        android:layout_marginEnd="12.0dip"
                        app:cardBackgroundColor="?colorSecondaryContainer"
                        app:cardCornerRadius="19.0dip"
                        app:cardElevation="0.0dip">
                        <RelativeLayout
                            android:layout_gravity="start|bottom|center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16.0dip"
                            android:layout_marginBottom="16.0dip"
                            android:layout_weight="1.0"
                            android:layout_marginStart="16.0dip"
                            android:layout_marginEnd="16.0dip">
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/dashboard_icon"
                                android:layout_width="80.0dip"
                                android:layout_height="80.0dip"
                                app:cardBackgroundColor="#00000000"
                                app:cardCornerRadius="16.0dip"
                                app:cardElevation="0.0dip"
                                app:rippleColor="#00000000"
                                app:strokeColor="?colorPrimary"
                                app:strokeWidth="3.0dip">
                                <ImageView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/uwu_banner_profile"
                                    android:scaleType="centerCrop" />
                            </com.google.android.material.card.MaterialCardView>
                            <TextView
                                android:textSize="19.0sp"
                                android:textColor="?android:textColorPrimary"
                                android:id="@+id/dashboard_title"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8.0dip"
                                android:text="Who is Hatsune Miku?"
                                android:layout_below="@+id/dashboard_icon"
                                android:layout_alignStart="@+id/dashboard_icon" />
                            <TextView
                                android:textSize="14.0sp"
                                android:textColor="?android:textColorSecondary"
                                android:id="@+id/dashboard_summary"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Hatsune Miku is a virtual pop star and a VOCALOID, which is a singing voice synthesizer software product. She is depicted as a 16-year-old girl with long, turquoise twintails and is officially code-named CV01."
                                android:layout_below="@+id/dashboard_title"
                                android:layout_alignStart="@+id/dashboard_title" />
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.neko.expandable.layout.ExpandableLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:layout_marginBottom="8.0dip"
                android:layout_marginStart="16.0dip"
                android:layout_marginEnd="16.0dip"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="?colorPrimary"
                    app:cardCornerRadius="28.0dip"
                    app:cardElevation="0.0dip">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:clipToPadding="false"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16.0dip"
                            android:layout_marginBottom="16.0dip"
                            android:layout_marginStart="16.0dip"
                            android:layout_marginEnd="8.0dip">
                            <androidx.preference.internal.PreferenceImageView
                                android:layout_width="40.0dip"
                                android:layout_height="40.0dip"
                                android:src="@drawable/uwu_sbuild"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                android:tint="?android:textColorPrimaryInverse" />
                        </LinearLayout>
                        <RelativeLayout
                            android:paddingTop="16.0dip"
                            android:paddingBottom="16.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:layout_marginStart="8.0dip"
                            android:layout_marginEnd="8.0dip">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="17.0sp"
                                    android:textColor="?android:textColorPrimaryInverse"
                                    android:ellipsize="marquee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="About"
                                    android:singleLine="false" />
                                <TextView
                                    android:textSize="14.0sp"
                                    android:textColor="?android:textColorPrimaryInverse"
                                    android:ellipsize="marquee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tap arrow icon to know more about the app."
                                    android:singleLine="false" />
                            </LinearLayout>
                        </RelativeLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16.0dip"
                            android:layout_marginBottom="16.0dip"
                            android:layout_marginStart="8.0dip"
                            android:layout_marginEnd="16.0dip">
                            <LinearLayout
                                android:background="@drawable/uwu_bg_circle_arrow"
                                android:layout_width="28.0dip"
                                android:layout_height="28.0dip"
                                android:backgroundTint="?android:textColorPrimaryInverse">
                                <ImageView
                                    android:id="@+id/arrow_button"
                                    android:layout_width="25.0dip"
                                    android:layout_height="25.0dip"
                                    android:layout_marginTop="1.0dip"
                                    android:src="@drawable/uwu_arrow"
                                    android:tint="?colorPrimary"
                                    android:layout_marginStart="2.0dip" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.neko.expandable.layout.ExpandableView
                    android:id="@+id/expandable_view"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    app:expandable_visibilityMode="vertical"
                    app:expandable_visibilityDuration="900">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <androidx.coordinatorlayout.widget.CoordinatorLayout
                            android:id="@+id/about_fragment_holder"
                            android:fitsSystemWindows="false"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" />
                    </LinearLayout>
                </com.neko.expandable.layout.ExpandableView>
            </com.neko.expandable.layout.ExpandableLayout>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:layout_marginTop="8.0dip"
                android:layout_marginRight="16.0dip"
                android:layout_marginBottom="16.0dip"
                app:cardBackgroundColor="?colorCard"
                app:cardCornerRadius="28.0dip"
                app:cardElevation="0.0dip">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textAppearance="?textAppearanceSubtitle2"
                        android:textSize="14.0sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/license" />
                    <TextView
                        android:textAppearance="?textAppearanceBody2"
                        android:textSize="14.0sp"
                        android:textColor="?android:textColorSecondary"
                        android:id="@+id/license"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16.0dip"
                        android:textIsSelectable="true" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>